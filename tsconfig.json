{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@adapters/*": ["adapters/*"],
            "@api/*": ["api/*"],
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@constants/*": ["constants/*"],
            "@config/*": ["config/*"],
            "@hooks/*": ["hooks/*"],
            "@interfaces/*": ["interfaces/*"],
            "@pages/*": ["pages/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@types/*": ["types/*"],
            "@utils/*": ["utils/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
